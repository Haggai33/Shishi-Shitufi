{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && $uid === auth.uid",
        ".write": "auth != null && $uid === auth.uid"
      }
    },
    
    "organizerEvents": {
      "$organizerId": {
        ".read": "auth != null && $organizerId === auth.uid",
        ".write": "auth != null && $organizerId === auth.uid",
        
        "events": {
          "$eventId": {
            ".read": "auth != null",
            
            "details": {
              ".write": "root.child('organizerEvents').child($organizerId).child('events').child($eventId).child('organizerId').val() === auth.uid"
            },
            
            "menuItems": {
              // המארגן יכול לכתוב לכל אוסף הפריטים (למשל, למחוק את כולם)
              ".write": "root.child('organizerEvents').child($organizerId).child('events').child($eventId).child('organizerId').val() === auth.uid",
              
              "$itemId": {
                // חוק מפורט לפריט בודד - כל התנאים במחרוזת אחת
                ".write": "root.child('organizerEvents').child($organizerId).child('events').child($eventId).child('organizerId').val() === auth.uid || (!data.child('assignedTo').exists() && newData.child('assignedTo').val() === auth.uid) || (data.child('assignedTo').val() === auth.uid && !newData.child('assignedTo').exists())"
              }
            },
            
            "assignments": {
              "$assignmentId": {
                ".write": "auth != null && (newData.child('userId').val() === auth.uid || data.child('userId').val() === auth.uid)"
              }
            },
            
            "participants": {
              "$participantId": {
                ".write": "auth != null && $participantId === auth.uid"
              }
            }
          }
        },
        ".indexOn": ["organizerId"]
      }
    }
  }
}
